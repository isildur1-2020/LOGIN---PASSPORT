extends template
block content
        form(action="/register" method="POST" style="width: 100%; height: 70vh; display: flex; flex-direction: column; justify-content: space-evenly; align-items: center")
            h1 Regístrate
            input(type="email" name="email" placeholder="Usuario" style="width: 40%; height: 40px; border-radius: 15px; outline: none; text-align: center; font-size: 1.1rem;")
            input(type="password" name="password" placeholder="Contraseña" style="width: 40%; height: 40px; border-radius: 15px; outline: none; text-align: center; font-size: 1.1rem;")
            button(style="border: 1px daseh black; border-radius: 20px; width: 20%; height: 45px; font-size: 1.2rem; outline: none;") Iniciar Sesión